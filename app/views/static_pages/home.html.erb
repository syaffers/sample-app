<% if signed_in? %>
    <div class="row-fluid">
        <div class="span9">
            <div class="row-fluid review-match all-left">
                <div class="span12">
                    <h4>Papers to review</h4>
                    <div class="row-fluid">
                        <%= render "papers/to_review_papers" %>
                    </div>
                </div>
                <div class="span12">
                    <h4>Papers you might like</h3>
                    <div class="row-fluid">
                        <%= render "papers/similar_papers" %>
                    </div>
                </div>
            </div>
        </div>
        <div class="span3">
            <h3>Notifications</h3>
            <%= render "users/notifications" %>
            <hr>
            <%= link_to "All notifications", notifications_user_path(current_user) %>
        </div>
    </div>
<% else %>
<div class="center hero-unit">
	<h1>TransPub</h1>
	
	<h2>
		Get your academic papers published with crowd-sourced peer reviews by 
		<a href="#">professionals and researchers.</a>
		Get a free account today and start publishing.
	</h2>
	
	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<div class="row-fluid">
    <div class="span12"><h3 class="center">Newest Papers</h3></div>
</div>
<div class="row-fluid">
    <%= render "papers/new_papers"%>
</div>
        
<% end %>
