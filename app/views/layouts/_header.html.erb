<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "TransPub", root_path, id: "logo" %>
			<nav>
				<ul class="nav pull-right">
					<li><%= link_to "Home", root_path %></li>
					<li><%= link_to "Search Papers", search_papers_path %></li>
					<li><%= link_to "Browse Users", users_path %>
					<% if signed_in? %>
					   <li id="fat-menu" class="dropdown">
					       <a href="#" class="dropdown-toggle" data-toggle="dropdown">
					           <%= current_user.name %> <b class="caret"></b>
					       </a>
					       <ul class="dropdown-menu">
					           <li><%= link_to "View Profile", current_user %></li>
					           <li><%= link_to "Update Profile", edit_user_path(current_user) %></li>
					           <% if current_user.editor? || current_user.admin? %>
					               <li class="divider"></li>
					               <li><%= link_to "Activities", activities_path %></li>
					               <li><%= link_to "Subjects", subjects_path %></li>
					           <% end %>
					           <li class="divider"></li>
					           <li><%= link_to "Upload a New Paper", new_paper_path %></li>
					           <li class="divider"></li>
					           <li><%= link_to "Sign Out", signout_path, method: "delete" %></li>
					       </ul>
					   </li>
					<% else %>
					   <li><%= link_to "Sign In", signin_path %></li>
				    <% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>