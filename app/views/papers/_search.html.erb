<%= form_tag papers_path, method: "get", class: "form-inline" do %>
    <% label_tag :search, "Search papers:" %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", class: "btn btn-primary", :name => nil%>
    <%= link_to "Browse papers...", browse_papers_path, class: "browse-paper-link" %>
<% end %>