<% provide(:title, "Create a New Subject")%>
<h1>Create a New Subject</h1>
<div class="row">
    <div class="span12">
        <%= form_for @subject, :html => { :multipart => true } do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
        
            <%= f.label :name, "Name of Journal/Topic/Subject", placeholder: "Example Title" %>
            <%= f.text_field :name %>
            
            <%= f.submit "Create Subject", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>