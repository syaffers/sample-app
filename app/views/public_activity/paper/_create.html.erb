<% if activity.trackable %>
    <% if activity.owner == current_user %>
        <%= activity.owner.name %>
    <% else %>
        <%= link_to activity.owner.name, activity.owner %>
    <% end %>
    added a paper:
    <%= link_to activity.trackable.title, activity.trackable %>
    in 
    <%= activity.trackable.subject.name %>
    <%= time_ago_in_words(activity.trackable.created_at) %> ago
<% else %>

<% end %>