<% provide(:title, "Editing User") %>
<% if current_user?(@user) %>

<h1>Update Your Profile</h1>

<div class="row">
    <div class="span12">
        <%= form_for(@user) do |f| %>
        
            <%= render "shared/error_messages", object: f.object %>
        
            <%= f.label :name %>
            <%= f.text_field :name %>
            
            <%= f.label :email %>
            <%= f.text_field :email %>
            
            <%= f.label :password %>
            <%= f.password_field :password %>
            
            <%= f.label :password_confirmation, "Confirm Password" %>
            <%= f.password_field :password_confirmation %>
            
            <%= f.label :job_title %>
            <%= f.text_field :job_title %>
            
            <%= f.label :institution %>
            <%= f.text_field :institution %>
            
            <%= f.label :summary %>
            <%= f.text_area :summary %>
            
            <%= f.label :tag_list, "List your subjects of interest (separated by commas, maximum of 9)" %>
            <%= f.text_field :tag_list %>
            
            <%= f.submit "Save Changes", class: "btn btn-primary" %>
        <% end %>
        
        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails">change</a>
    </div>   
</div>

<% end %>

<% if current_user.admin? %>
<hr>
<h3>Update Role</h3>

<div class="row">
    <div class="span12">
        <%= form_for @user, :url => [:update_status, @user], html: { method: :put } do |f| %>
            <%= render "shared/error_messages", object: f.object %>
            
            <%= f.check_box :admin %>
            <%= f.label :admin %>
            
            <%= f.check_box :editor %>
            <%= f.label :editor %>
            
            <%= f.submit "Save Changes", class: "btn btn-primary" %>
        <% end %>
    </div>   
</div>

<% end %>
